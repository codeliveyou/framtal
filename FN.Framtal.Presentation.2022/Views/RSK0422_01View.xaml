                            Header="Land"/>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Path=R422_SE_STAERD_FYRIRTAEKIS}"
                            Header="Stærð fyrirtækis"/>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Path=N422_SE_EIGNARHLUTI}"
