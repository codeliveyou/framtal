            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Row="0" 
                Grid.Column="0" 
                FontWeight="Bold" FontSize="14px" >
                Eigendur samstarfsverkefnis
            </TextBlock>

            <TextBlock 
                Grid.Row="1" 
                Grid.Column="0" 
                FontSize="11px" >
                Hér skal skrá alla samstarfsaðila að nýsköpunarverkefni, en tilgreina útlagðan kostnað og fengna styrki á <Run FontStyle="Italic">Greinargerð um skattfrádrátt, RSK 4.21</Run>
            </TextBlock>

            <Border Grid.Row="2" Grid.Column="0" Background="Transparent" BorderThickness="1 1 1 1" >
                <DataGrid
                    DataContext="{Binding RSK422_SAMSTARFSV_EIGENDUR}"
                    BorderThickness="0" 
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    BorderBrush="Black"
                    ItemsSource="{Binding}">
